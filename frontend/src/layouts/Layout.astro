---
'client:load'
import { Astro } from "astro";

const { title = "Echo Journal" } = Astro.props;

// Get current path to highlight active nav item
const currentPath = Astro.url.pathname;
var user_id = "";
var email = "No email found";

user_id = Astro.cookies.get('user_id')?.value;
const user_id_icon = user_id ? user_id.charAt(0).toUpperCase() : "U";
email = await fetch(`http://localhost:8000/auth/user/${user_id}`)
  .then(res => res.json())
  .then(data => data.email || "No email found");



---

<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css"/>
  </head>
  <body class="flex min-h-screen bg-gray-50">
    <aside class="w-64 bg-white border-r flex flex-col justify-between">
      <div>
        <div class="flex items-center px-6 py-4 text-2xl h-20  font-semibold border-b">
            <img src="Untitled_Artwork.gif" alt="Echo Journal Logo" class="mx-auto mt-4 overflow-hidden" />
        </div>
        <nav class="mt-4">
          <ul>
            <li class={`px-6 py-3 ${currentPath === '/dashboard' || currentPath === '/dashboard' ? 'bg-gray-100 text-gray-900 font-medium' : 'hover:bg-gray-100'} cursor-pointer`}>
              <a href="dashboard.html" class="flex items-center w-full">
                <i class="fas fa-chart-line mr-2"></i> Dashboard
              </a>
            </li>
            <li class={`px-6 py-3 ${currentPath === '/playlist.html' || currentPath === '/playlist' ? 'bg-gray-100 text-gray-900 font-medium' : 'hover:bg-gray-100'} cursor-pointer`}>
              <a href="/playlist.html" class="flex items-center w-full">
                <i class="fas fa-music mr-2"></i> Playlists
              </a>
            </li>
            <li class={`px-6 py-3 ${currentPath === '/friends.html' || currentPath === '/friends' ? 'bg-gray-100 text-gray-900 font-medium' : 'hover:bg-gray-100'} cursor-pointer`}>
              <a href="/friends.html" class="flex items-center w-full">
                <i class="fas fa-user-friends mr-2"></i> Friends
              </a>
            </li>
            <li class={`px-6 py-3 ${currentPath === '/profile.html' || currentPath === '/profile' ? 'bg-gray-100 text-gray-900 font-medium' : 'hover:bg-gray-100'} cursor-pointer`}>
              <a href="/profile.html" class="flex items-center w-full">
                <i class="fas fa-cog mr-2"></i> Profile
              </a>
            </li>
            <li class={`px-6 py-3 ${currentPath === '/logout.html' || currentPath === '/logout' ? 'bg-gray-100 text-gray-900 font-medium' : 'hover:bg-gray-100'} cursor-pointer`}>
              <a href="/logout" class="flex items-center w-full">
                <i class="fas fa-cog mr-2"></i> Logout
              </a>
            </li>
          </ul>
        </nav>
      </div>
      <div class="px-6 py-4 border-t flex items-center space-x-2">
        <div class="w-10 h-10 bg-gradient-to-r from-blue-500 to-purple-500 rounded-full flex items-center justify-center font-semibold text-white">{user_id_icon}</div>
        <div>
          <p class="text-sm font-medium" id="name">{user_id}</p>
          <p class="text-xs text-gray-500" id="email">{email}</p>
        </div>
      </div>
    </aside>
    
    <main class="flex-1 overflow-auto">
      <div class="max-w-6xl mx-auto p-8">
        <slot />
      </div>
    </main>

    <script>
//For testing purposes, set a user ID
      document.addEventListener('DOMContentLoaded', () => {
        const navLinks = document.querySelectorAll('nav a');
        
        navLinks.forEach(link => {
          link.addEventListener('click', (e) => {
            // Add loading state
            const icon = link.querySelector('i');
            if (icon) {
              icon.classList.add('fa-spin');
              setTimeout(() => {
                icon.classList.remove('fa-spin');
              }, 500);
            }
          });
        });
      });


    </script>
  </body>
</html>